@page "/config/shifts"
@using CMetalsFulfillment.Domain
@using Microsoft.AspNetCore.Authorization
@using MudBlazor
@inject HttpClient Http
@inject IDialogService DialogService
@inject ISnackbar Snackbar
@attribute [Authorize(Policy = "AdminPolicy")]

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
    <MudText Typo="Typo.h3" GutterBottom="true">Shift Templates</MudText>

    <MudTable Items="@_shifts" Dense="true" Hover="true" Striped="true" Filter="new Func<ShiftTemplate,bool>(FilterFunc)">
        <ToolBarContent>
            <MudText Typo="Typo.h6">Shifts</MudText>
            <MudSpacer />
            <MudTextField @bind-Value="_searchString" Placeholder="Search" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="AddShift" Class="ml-4">Add Shift</MudButton>
        </ToolBarContent>
        <HeaderContent>
            <MudTh>Name</MudTh>
            <MudTh>Start Time</MudTh>
            <MudTh>End Time</MudTh>
            <MudTh>Active</MudTh>
            <MudTh>Actions</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Name">@context.Name</MudTd>
            <MudTd DataLabel="Start Time">@context.StartTimeLocal.ToString(@"hh\:mm")</MudTd>
            <MudTd DataLabel="End Time">@context.EndTimeLocal.ToString(@"hh\:mm")</MudTd>
            <MudTd DataLabel="Active">
                <MudChip T="string" Color="@(context.IsActive ? Color.Success : Color.Error)" Size="Size.Small">@(context.IsActive ? "Yes" : "No")</MudChip>
            </MudTd>
            <MudTd DataLabel="Actions">
                <MudButton Variant="Variant.Filled" Color="Color.Primary" Size="Size.Small" OnClick="@(() => EditShift(context))">Edit</MudButton>
            </MudTd>
        </RowTemplate>
        <PagerContent>
            <MudTablePager />
        </PagerContent>
    </MudTable>
</MudContainer>

@code {
    private List<ShiftTemplate> _shifts = new();
    private string _searchString = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadShiftsAsync();
    }

    private async Task LoadShiftsAsync()
    {
        try
        {
            _shifts = await Http.GetFromJsonAsync<List<ShiftTemplate>>("api/config/shifts") ?? new();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading shifts: {ex.Message}", Severity.Error);
        }
    }

    private bool FilterFunc(ShiftTemplate shift) => FilterFunc(shift, _searchString);

    private bool FilterFunc(ShiftTemplate shift, string searchString)
    {
        if (string.IsNullOrWhiteSpace(searchString)) return true;
        if (shift.Name.Contains(searchString, StringComparison.OrdinalIgnoreCase)) return true;
        return false;
    }

    private async Task AddShift()
    {
        var parameters = new DialogParameters { ["Shift"] = new ShiftTemplate { IsActive = true } };
        var dialog = await DialogService.ShowAsync<ShiftDialog>("Add Shift", parameters);
        var result = await dialog.Result;

        if (result != null && !result.Canceled)
        {
            await LoadShiftsAsync();
        }
    }

    private async Task EditShift(ShiftTemplate shift)
    {
        var parameters = new DialogParameters { ["Shift"] = new ShiftTemplate
        {
            ShiftTemplateId = shift.ShiftTemplateId,
            BranchId = shift.BranchId,
            Name = shift.Name,
            StartTimeLocal = shift.StartTimeLocal,
            EndTimeLocal = shift.EndTimeLocal,
            BreakRulesJson = shift.BreakRulesJson,
            IsActive = shift.IsActive
        } };

        var dialog = await DialogService.ShowAsync<ShiftDialog>("Edit Shift", parameters);
        var result = await dialog.Result;

        if (result != null && !result.Canceled)
        {
            await LoadShiftsAsync();
        }
    }
}
