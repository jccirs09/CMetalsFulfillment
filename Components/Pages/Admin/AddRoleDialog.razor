@using MudBlazor
@inject ISnackbar Snackbar
@using Microsoft.AspNetCore.Components.Authorization
@inject AuthenticationStateProvider AuthStateProvider

<MudDialog>
    <DialogContent>
        <MudSelect T="string" Label="Role" @bind-Value="selectedRole" Required="true">
            @foreach (var role in AllowedRoles)
            {
                <MudSelectItem Value="@role">@role</MudSelectItem>
            }
        </MudSelect>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit" Disabled="@string.IsNullOrEmpty(selectedRole)">Add</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = default!;

    // Parameter to receive allowed roles based on caller's permission
    [Parameter] public List<string> AllowedRoles { get; set; } = new();

    private string selectedRole = "";

    private void Cancel() => MudDialog.Cancel();

    private void Submit()
    {
        MudDialog.Close(DialogResult.Ok(selectedRole));
    }
}
