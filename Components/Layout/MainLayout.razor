@inherits LayoutComponentBase
@implements IDisposable
@using CMetalsFulfillment.Services
@using CMetalsFulfillment.Data.Entities
@using System.Timers
@inject IBranchContext BranchContext
@inject AuthenticationStateProvider AuthState
@inject IDialogService DialogService
@inject NavigationManager NavManager

<MudThemeProvider @bind-IsDarkMode="_isDarkMode" Theme="_theme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1" Dense="true" Fixed="true" Color="Color.Surface">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudIcon Icon="@Icons.Material.Filled.WaterDrop" Color="Color.Primary" Class="ml-3 mr-2" />
        <MudText Typo="Typo.h6">MetalFlow</MudText>
        <MudSpacer />

        @{ var branch = _currentBranch; }
        @if (branch != null)
        {
            <MudChip T="string" Icon="@Icons.Material.Filled.LocationCity" Color="Color.Primary" Class="mr-4">
                @branch.Code - @branch.Name
            </MudChip>
            <MudButton Variant="Variant.Outlined" Color="Color.Primary" Size="Size.Small" Class="mr-4" OnClick="OpenBranchPicker">Switch</MudButton>
            <MudText Typo="Typo.body2" Class="mr-4">@_timeString</MudText>
        }
        else
        {
            <MudText Typo="Typo.body2" Color="Color.Error" Class="mr-4">No Branch Selected</MudText>
            <MudButton Variant="Variant.Filled" Color="Color.Error" Size="Size.Small" OnClick="OpenBranchPicker">Select Branch</MudButton>
        }

        <MudIconButton Icon="@Icons.Material.Filled.Notifications" Color="Color.Inherit" Edge="Edge.End" Class="mr-4" />

        <MudStack Row="true" AlignItems="AlignItems.Center" Class="ml-4">
             <MudStack Spacing="0" Class="mr-2" AlignItems="AlignItems.End">
                 <MudText Typo="Typo.body2">@_userName</MudText>
                 <MudText Typo="Typo.caption" Color="Color.Secondary">User Role</MudText>
            </MudStack>
            <MudAvatar Color="Color.Primary" Size="Size.Small">@_userInitials</MudAvatar>
        </MudStack>
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2" Variant="DrawerVariant.Responsive">
        <NavMenu />
        <MudSpacer />
        <MudText Typo="Typo.caption" Class="pa-4" Color="Color.Secondary">System Online v1.0.4</MudText>
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;
    bool _isDarkMode = true;
    MudTheme _theme = new MudTheme()
    {
        PaletteDark = new PaletteDark()
        {
            Primary = "#135bec",
            Surface = "#1a1a2e",
            AppbarBackground = "#1a1a2e",
            Background = "#0f0f1a",
            DrawerBackground = "#16213e"
        }
    };
    Branch? _currentBranch;
    string _timeString = "";
    string _userName = "";
    string _userInitials = "U";
    System.Timers.Timer? _timer;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    protected override async Task OnInitializedAsync()
    {
        _currentBranch = await BranchContext.GetBranchAsync();

        var authState = await AuthState.GetAuthenticationStateAsync();
        var user = authState.User;
        if (user.Identity?.IsAuthenticated == true)
        {
            _userName = user.Identity.Name ?? "User";
            if (!string.IsNullOrEmpty(_userName))
            {
                _userInitials = _userName.Substring(0, 1).ToUpper();
            }
        }

        StartTimer();
    }

    void StartTimer()
    {
        _timer = new System.Timers.Timer(1000);
        _timer.Elapsed += (s, e) =>
        {
            UpdateTime();
            InvokeAsync(StateHasChanged);
        };
        _timer.Start();
        UpdateTime();
    }

    void UpdateTime()
    {
        var branch = _currentBranch;
        if (branch != null)
        {
            try
            {
                TimeZoneInfo tz;
                try
                {
                    tz = TimeZoneInfo.FindSystemTimeZoneById(branch.TimeZoneId);
                }
                catch
                {
                    tz = TimeZoneInfo.Utc;
                }

                var now = TimeZoneInfo.ConvertTimeFromUtc(DateTime.UtcNow, tz);
                _timeString = now.ToString("HH:mm:ss");
            }
            catch
            {
                _timeString = DateTime.Now.ToString("HH:mm:ss");
            }
        }
    }

    private async Task OpenBranchPicker()
    {
        var options = new DialogOptions { CloseOnEscapeKey = true, FullWidth = true, MaxWidth = MaxWidth.Medium };
        var dialog = await DialogService.ShowAsync<CMetalsFulfillment.Components.Shared.BranchPicker>("Select Branch", options);
        var result = await dialog.Result;

        if (!result.Canceled)
        {
            NavManager.Refresh(true);
        }
    }

    public void Dispose()
    {
        _timer?.Stop();
        _timer?.Dispose();
    }
}
